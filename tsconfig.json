{
  "compilerOptions": {
    "baseUrl": ".", // No need for 'src' anymore
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "pages",
    "components",
    "lib",
    "public",
    "utils",
    ".next/types/**/*.ts"
, "components", ".next/types/app/layout.jsx", "app/WorkPage.tsx", ".next/types/app/api/auth/[auth0]/route.js"  ],
  "exclude": [
    "node_modules"
  ]
}
